pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'dockerhub-credentials'
        IMAGE_NAME = 'yourdockerhubusername/spring-app'
        GIT_REPO = 'https://github.com/yourusername/your-repo.git'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: "${env.GIT_REPO}"
            }
        }
        stage('Build') {
            steps {
                script {
                    def app = docker.build("${env.IMAGE_NAME}")
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${env.DOCKER_CREDENTIALS_ID}") {
                        def app = docker.image("${env.IMAGE_NAME}")
                        app.push()
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    dockerCompose.up()
                }
            }
        }
    }
}
